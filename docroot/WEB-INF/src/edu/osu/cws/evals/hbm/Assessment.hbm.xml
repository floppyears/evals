<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" >

    <class name="edu.osu.cws.evals.models.Assessment" table="assessments"
           dynamic-insert="true"
           dynamic-update="true">
        <id name="id" type="int" column="ID">
            <generator class="native">
                <param name="sequence">pass_seq</param>
            </generator>
        </id>

        <property name="goal" type="text" column="GOAL"/>
        <property name="newGoals" type="text" column="NEW_GOALS"/>
        <property name="employeeResult" type="text" column="EMPLOYEE_RESULT"/>
        <property name="supervisorResult" type="text" column="SUPERVISOR_RESULT"/>
        <property name="createDate" type="timestamp" column="CREATE_DATE"/>
        <property name="modifiedDate" type="timestamp" column="MODIFIED_DATE"/>

        <many-to-one name="appraisal" class="edu.osu.cws.evals.models.Appraisal"
                     column="APPRAISAL_ID"
                     not-null="true"/>
        <many-to-one name="criterionDetail" class="edu.osu.cws.evals.models.CriterionDetail"
                     column="CRITERION_DETAIL_ID"
                     not-null="true"/>
        <set name="goalLogs" inverse="true" order-by="createDate DESC" batch-size="30">
            <key column="ASSESSMENT_ID"/>
            <one-to-many class="edu.osu.cws.evals.models.GoalLog"/>
        </set>
    </class>

</hibernate-mapping>