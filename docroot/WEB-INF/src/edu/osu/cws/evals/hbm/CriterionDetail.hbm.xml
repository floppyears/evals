<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false" >

    <class name="edu.osu.cws.evals.models.CriterionDetail" table="criteria_details" batch-size="15">
        <id name="id" type="int" column="ID">
            <generator class="native">
                <param name="sequence">passmgr.pass_seq</param>
            </generator>
        </id>

        <property name="createDate" type="timestamp" column="CREATE_DATE"/>
        <property name="description" type="text" column="DESCRIPTION"/>

        <many-to-one name="areaID" class="edu.osu.cws.evals.models.CriterionArea"
                     not-null="true"
                     column="AREA_ID"/>
        <many-to-one name="creator" class="edu.osu.cws.evals.models.Employee"
                     column="CREATOR_PIDM"
                     not-null="true"/>
    </class>

</hibernate-mapping>
