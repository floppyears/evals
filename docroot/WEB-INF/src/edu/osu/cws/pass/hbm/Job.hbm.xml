<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false" >

    <class name="edu.osu.cws.pass.models.Job" table="jobs">
        <id name="id" type="int">
            <generator class="native" />
        </id>

        <property name="jobTitle" type="string" length="255"/>
        <property name="jobNumber" type="string" length="8"/>
        <property name="suffix" type="string" length="2"/>
        <property name="jobEcls" type="string" length="45"/>
        <property name="beginDate" type="date"/>
        <property name="endDate" type="date"/>
        <property name="positionClass" type="string" length="45"/>
        <property name="tsOrgCode" type="string" length="45"/>
        <property name="orgCodeDescription" type="string" length="45"/>
        <property name="businessCenterName" type="string" length="4"/>
        <property name="appointmentType" length="45"/>

        <many-to-one name="employee" class="edu.osu.cws.pass.models.Employee"
                     column="employeePidm"
                     not-null="false"/>
        <many-to-one name="supervisor" class="edu.osu.cws.pass.models.Job"
                     column="supervisorJobID"
                     not-null="false"/>
    </class>

</hibernate-mapping>
