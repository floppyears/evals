<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false" >

    <class name="edu.osu.cws.pass.models.Appraisal" table="appraisals"
           dynamic-insert="true"
           dynamic-update="true">
        <id name="id" type="int">
            <generator class="native" />
        </id>

        <property name="startDate" type="date"/>
        <property name="endDate" type="date"/>
        <property name="goalsSubmitDate" type="timestamp"/>
        <property name="goalApprovedDate" type="timestamp"/>
        <property name="goalsComments" type="text"/>
        <property name="resultSubmitDate" type="timestamp"/>
        <property name="evaluation" type="text"/>
        <property name="rating" type="java.lang.Integer" length="1"/>
        <property name="reviewSubmitDate" type="timestamp"/>
        <property name="review" type="text"/>
        <property name="createDate" type="timestamp"/>
        <property name="modifiedDate" type="timestamp"/>
        <property name="employeeResponse" type="text"/>
        <property name="respondedDate" type="timestamp"/>
        <property name="employeeSignedDate" type="timestamp"/>
        <property name="emailType" length="45"/>
        <property name="emailDate" type="date"/>
        <property name="emailCount" type="java.lang.Integer"/>
        <property name="closeOutDate" type="timestamp"/>
        <property name="closeOutReason" type="text"/>
        <property name="status" length="32"/>
        <property name="reopenedDate" type="timestamp"/>
        <property name="reopenReason" type="text"/>
        <property name="originalStatus" length="32"/>
        <property name="signatureRequestedDate" type="timestamp"/>
        <property name="type"/>
        <property name="evaluation2Date" type="timestamp"/>
        <property name="review2Date" type="timestamp"/>

        <many-to-one name="job" class="edu.osu.cws.pass.models.Job"
                     column="jobID"
                     not-null="true"/>
        <many-to-one name="goalsApprover" class="edu.osu.cws.pass.models.Employee"
                     column="goalsApproverID"
                     not-null="false"/>
        <many-to-one name="evaluator" class="edu.osu.cws.pass.models.Employee"
                     column="evaluatorID"
                     not-null="false"/>
        <many-to-one name="reviewer" class="edu.osu.cws.pass.models.Employee"
                     column="reviewerID"
                     not-null="false"/>
        <many-to-one name="closeOutBy" class="edu.osu.cws.pass.models.Employee"
                     column="closeOutID"
                     not-null="false"/>
        <many-to-one name="reopenedBy" class="edu.osu.cws.pass.models.Employee"
                     column="reopenerID"
                     not-null="false"/>
        <many-to-one name="evaluator2" class="edu.osu.cws.pass.models.Employee"
                     column="evaluator2ID"
                     not-null="false"/>
        <many-to-one name="reviewer2" class="edu.osu.cws.pass.models.Employee"
                     column="reviwer2ID"
                     not-null="false"/>
        <set name="assessments" inverse="true">
            <key column="appraisalID"/>
            <one-to-many class="edu.osu.cws.pass.models.Assessment" />
        </set>
    </class>

</hibernate-mapping>