<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false" >

    <class name="edu.osu.cws.pass.models.Admin" table="admins">
        <id name="id" type="int">
            <generator class="native" />
        </id>

        <property name="createDate" type="timestamp"/>
        <property name="modifiedDate" type="timestamp"/>
        <property name="isMaster" type="boolean"/>
        <property name="isBackupMaster" type="boolean"/>

        <many-to-one name="employee" class="edu.osu.cws.pass.models.Employee" column="employeeID" not-null="true"/>
        <many-to-one name="createdBy" class="edu.osu.cws.pass.models.Employee" not-null="true"/>
    </class>

</hibernate-mapping>
